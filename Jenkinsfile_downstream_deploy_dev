pipeline {
    agent {
        label 'wsl'
    }
    parameters {
        string(name: 'IMAGE_TAG', defaultValue: 'dev', description: 'Image to pull from repo')
        string(name: 'NAME', defaultValue: 'main', description: 'Container Name')
        string(name: 'PORT', defaultValue: '3001', description: 'Host port')
        string(name: 'APP_PORT', defaultValue: '3000', description: 'Container port')
    }
    stages {
        stage('Pull') {
            steps {
                echo "Pulling $params.IMAGE_TAG"
                sh "docker pull $params.IMAGE_TAG"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying $params.IMAGE_TAG"
                sh "(docker rm -f $params.NAME || true ) && docker run --name $params.NAME -dp $params.PORT:$params.APP_PORT $params.IMAGE_TAG"
            }
        }
    }
}
